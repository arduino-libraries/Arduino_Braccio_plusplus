#include <Braccio++.h>

#include "AppState.h"

/**************************************************************************************
 * GLOBAL VARIABLES
 **************************************************************************************/

LearnAndRepeatApp app;

/**************************************************************************************
 * SETUP/LOOP
 **************************************************************************************/

void setup()
{
  if (Braccio.begin(custom_main_menu)) {
    app.enableButtons();
  }
}

void loop()
{
  /* Only execute every 50 ms. */
  static auto prev = millis();
  auto const now = millis();

  if ((now - prev) > 50)
  {
    prev = now;
    app.update(EventSource::TimerTick);
  }
}
